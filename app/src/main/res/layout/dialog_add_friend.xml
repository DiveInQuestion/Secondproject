<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/dialog_add_friend"
	android:orientation="vertical"
	android:weightSum="1">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_marginTop="110dp" android:layout_marginRight="20dp"
		android:layout_marginLeft="20dp">

		<TextView android:layout_width="wrap_content"
			android:layout_height="20dp" android:text="NAME:"
			android:textColor="#FF02FF06"
			android:textStyle="bold"
			android:layout_weight="1"  android:paddingRight="10dp"
			android:id="@+id/textView" />

		<EditText android:id="@+id/txt_friend_name"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/edit_text_background" />

	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="20dp" android:orientation="horizontal"
		android:layout_marginTop="10dp" android:layout_marginRight="20dp"
		android:layout_marginLeft="20dp" android:layout_marginBottom="10dp"
		android:layout_weight="0.00">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="NUMBER:"
			android:textColor="#FF02FF06"
			android:textStyle="bold"
			android:layout_weight="1" android:paddingRight="10dp"/>

		<EditText android:id="@+id/txt_friend_number"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/edit_text_background" />

	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center_horizontal"
		android:weightSum="1">

		<Button android:id="@+id/btn_dialog_ok" android:layout_width="40dp"
			android:layout_height="40dp" android:background="@drawable/dialog_ok_def"
			android:layout_marginRight="50px"
			android:layout_weight="0.02" />

		<Button android:id="@+id/btn_dialog_close"
			android:layout_width="40dp" android:layout_height="40dp"
			android:background="@drawable/dialog_close_def" />

	</LinearLayout>
</LinearLayout>